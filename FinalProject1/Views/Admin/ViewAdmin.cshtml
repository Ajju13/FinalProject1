@model IEnumerable<FinalProject1.Models.Admin>

@{
    ViewBag.Title = "ViewAdmin";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<h2>View Admin</h2>



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Admin_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin_Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin_Image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Address)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Admin_Image))
                {
                    <img src="@Url.Content(item.Admin_Image)" alt="Student Image" style="width: 50px; height: 50px;" />
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAdmin", new { id = item.Admin_ID })
                @using (Html.BeginForm("DeleteAdmin", "Admin"))
                {
                    @Html.Hidden("id", item.Admin_ID)
                    <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this student?');" />
                }
            </td>
        </tr>
    }

</table>
